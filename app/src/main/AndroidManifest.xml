<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lxm.smartbutler">

    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/NoActionFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingActivity"
            android:label="@string/text_setting" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/NoActionFullScreenTheme" />
        <activity
            android:name=".ui.LoginActivity"
            android:label="登录" />
        <activity
            android:name=".ui.RegisterActivity"
            android:label="注册" />
        <activity
            android:name=".ui.findPassActivity"
            android:label="找回密码" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.lxm.smartbutler.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".ui.CourierActivity"
            android:label="物流查询"></activity>
    </application>

</manifest>